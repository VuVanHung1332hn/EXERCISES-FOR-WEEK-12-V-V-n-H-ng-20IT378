@page "/trang-dau-tien/{solanlap:int?}"
@using ASP.NET_Razor.Pages;

@model FirstPage
@{
    <h1 style="color:orangered">@Model.title</h1>
    <h2>@ViewData["mydata"]</h2>
    <p>Học lập trình ASP.NET Core (<strong>@System.DateTime.Now</strong>)</p>

    var a = 2;
    int b = 3;

    var solanlapstring = this.Request.RouteValues["solanlap"] ?? "0";

    int solanlap = Int32.Parse(solanlapstring.ToString());
    <p> Can bac hai cua @a la @Math.Sqrt(a)</p>
    <p>Tong cuar @a va @b la @(a + b) </p>

   
}


<ol>
    @for (int i = 1; i <= solanlap; i++)
    {
        // ...
        <li>Muc thu @i</li>
    }
</ol>

<p>@Model.Welcome("Vu Van Hung");</p>